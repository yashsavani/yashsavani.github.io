---
import education from '../data/education.yaml';
---

<article>
  <h2>Education</h2>
  <ul class="space-y-6">
    {education.map((item) => (
      <li>
        <div class="flex flex-col md:flex-row items-baseline">
          <h4 class="flex-auto !mb-0">
            {item.degree}
            <span class="text-base font-light">{item.GPA}</span>
          </h4>
          <p class="text-base font-light !mb-0">{item.dates}</p>
        </div>
        <p class="!mt-1">{item.institution} <span class="text-base font-light">{item.location}</span></p>
      </li>
    ))}
  </ul>
</article>
